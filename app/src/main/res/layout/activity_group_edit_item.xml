<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#416479"
    android:layout_margin="4sp"
    app:contentPadding="10sp"
    app:cardElevation="10sp"
    app:cardCornerRadius="4sp"
    tools:context=".group_edit_item">

    <ImageView
        android:id="@+id/removebtn"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="300sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/ic_remove"
        />

    <ImageView
        android:id="@+id/undobtn"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:visibility="gone"
        android:layout_marginStart="300sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/ic_undo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_height="100sp"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageuseritem"
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:civ_border_width="2sp"
            android:layout_centerVertical="true"



            android:src="@drawable/ic_imgprofile"

            />

        <TextView
            android:id="@+id/username"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"

            android:fontFamily="@font/novusbold"
            android:textColor="@color/colorPrimary"
            android:text="@string/Username"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />






    </LinearLayout>



</androidx.cardview.widget.CardView>