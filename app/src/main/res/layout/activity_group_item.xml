<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#416479"
    android:layout_margin="4sp"
    app:contentPadding="10sp"
    app:cardElevation="10sp"
    app:cardCornerRadius="4sp"
    tools:context=".group_item">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_height="100sp"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupimage"
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:civ_border_width="2sp"
            android:layout_centerVertical="true"


            android:src="@drawable/ic_groupphoto"

            />

        <TextView
            android:id="@+id/groupname"
            android:fontFamily="@font/novusbold"
            android:textColor="#ffff"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:text="@string/Groupname"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <ImageView

        android:id="@+id/havemessage"
        android:visibility="gone"
        android:layout_marginStart="280sp"
        android:layout_marginTop="10sp"
        android:layout_weight=".1"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ic_havemessage" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="80sp"


        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/senderreciever"

            android:text="@string/Lastmessage"

            android:textColor="@color/colorPrimary"

            android:visibility="gone"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lastmessage"

            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            android:text="@string/Lastmessage"
            android:ellipsize="end"
            android:maxEms="5"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginStart="5sp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />



        <TextView
            android:id="@+id/lastmessagetime"

            android:text="@string/Lastmessage"
            android:textColor="#ffff"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_marginStart="5sp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</androidx.cardview.widget.CardView>